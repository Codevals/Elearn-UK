{% extends 'base.html.twig' %}

{% block title %}Cycle index{% endblock %}

{% block body %}
    <h1>Cycle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>LibelleCourt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cycle in cycles %}
            <tr>
                <td>{{ cycle.id }}</td>
                <td>{{ cycle.libelle }}</td>
                <td>{{ cycle.libelleCourt }}</td>
                <td>
                    <a href="{{ path('cycle_show', {'id': cycle.id}) }}">show</a>
                    <a href="{{ path('cycle_edit', {'id': cycle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cycle_new') }}">Create new</a>
{% endblock %}
