{% extends 'adminTemplate/baseAdmin.html.twig' %}

{% block title %}Epreuve index{% endblock %}

{% block body %}
    <h1>Epreuve index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>DocumentName</th>
            <th>Titre</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th>Titre</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for epreuve in epreuves %}
            <tr>
                <td>{{ epreuve.id }}</td>
                <td>{{ epreuve.documentName }}</td>
                <td>{{ epreuve.titre }}</td>
                <td>{{ epreuve.createdAt ? epreuve.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ epreuve.updatedAt ? epreuve.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ epreuve.titre }}</td>
                <td>
                    <a class="btn btn-xs btn-info" href="{{ path('epreuve_show', {'id': epreuve.id}) }}">
                        <i class="fa fa-eye red"></i>
                        Voir
                    </a>
                    <a class="btn btn-xs btn-warning" href="{{ path('epreuve_edit', {'id': epreuve.id}) }}">
                        <i class="fa fa-edit"></i>
                        Modifier
                    </a>
                    {{ include('epreuve/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('epreuve_new') }}"class="btn btn-primary btn-xs">
        <i class="fa fa-edit"></i>
        Enregistrer une nouvelle Ã©preuve </a>
{% endblock %}
