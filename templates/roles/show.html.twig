{% extends 'adminTemplate/baseAdmin.html.twig' %}

{% block title %}Roles{% endblock %}

{% block body %}
    <h1>Roles</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ role.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ role.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ role.slug }}</td>
        </tr>
        <tr>
            <th>Level</th>
            <td>{{ role.level }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('roles_index') }}" class="btn btn-default btn-xs">
        <i class="fa fa-list-alt"></i>
        Retour à la liste des rôles
    </a>

    <a href="{{ path('roles_edit', {'id': role.id}) }}" class="btn btn-warning btn-xs">
        <i class="fa fa-edit"></i>
        Modifier
    </a>

    {{ include('roles/_delete_form.html.twig') }}
{% endblock %}
