{% extends 'adminTemplate/baseAdmin.html.twig' %}

{% block title %}Roles index{% endblock %}

{% block body %}
    <h1>Roles index</h1>

    <table class="table table-responsive table-bordered table-condensed table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>Level</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.name }}</td>
                <td>{{ role.slug }}</td>
                <td>{{ role.level }}</td>
                <td>
                    <a class="btn btn-xs btn-info" href="{{ path('roles_show', {'id': role.id}) }}">
                        <i class="fa fa-eye red"></i>
                        Voir
                    </a>
                    <a class="btn btn-xs btn-warning" href="{{ path('roles_edit', {'id': role.id}) }}">
                        <i class="fa fa-edit"></i>
                        Modifier
                    </a>
                    {{ include('roles/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('roles_new') }}" class="btn btn-primary btn-xs">
        <i class="fa fa-edit"></i>
        Créer un nouveau rôle
    </a>
{% endblock %}
