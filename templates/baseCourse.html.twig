<!DOCTYPE html>
<html lang="en">

<head>
    <title>{% block title %}{% endblock %}</title>
    <meta charset="UTF-8">
    <meta name="keywords" content="event, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="{{ asset('assets/courses/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/courses/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/home/fonts/fontawesome/css/font-awesome.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/courses/css/themify-icons.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/courses/css/style.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/courses/css/own.css') }}">
    {% block stylesheets %}{% endblock %}
</head>

<body>
<div id="preloder">
    <div class="loader"></div>
</div>

<nav class="nav-section">
    <div class="container">
        <div class="nav-right">
            <a href="">Se connecter</a>
            <a href=""> <span class="caret"></span></a>
            <form id="logout-form" action="" method="POST" style="display: none;">
            </form>
        </div>
        <ul class="main-menu">
            <li><a href="">Acceuil</a></li>
        </ul>
    </div>
</nav>



<section class="blog-page-section spad pt-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 post-list">
                <div class="post-item">
                    <div class="post-content">
                        <div class="site-breadcrumb" id="courseTitle">
                            <div class="container">
                                <h2>{% block courseTitle %}{% endblock %}</h2>
                            </div>
                        </div>
                        <div class="container">
                            {% block video %}{% endblock %}
                        </div>
                        <div class="container">
                            {% block courseContent %}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-8 col-md-5 col-lg-4 col-xl-3 offset-xl-1 offset-0 pl-xl-0 sidebar mt-lg-5">
                <div class="widget own" style="position: fixed;">
                    {% block chapterAside %}{% endblock %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8">
                {% block navChapter %}{% endblock %}
            </div>
        </div>
    </div>
</section>

<footer class="footer-section">
    <div class="copyright">
        <div class="container">
            <p>Copyright ©2020 Tous droits reservés </p>
        </div>
    </div>
</footer>
<script>
    MathJax = {
        loader: {
            load: ['input/asciimath', 'output/chtml']
        },
        asciimath: {
            delimiters: [
                ['$', '$'],
                ['`', '`']
            ]
        }
    }
</script>

<script src="{{ asset('assets/courses/mathjax/es5/tex-chtml.js') }}" id="MathJax-script" async></script>
<script src="{{ asset('assets/courses/js/jquery-3.2.1.min.js') }}"></script>
<script src="{{ asset('assets/courses/js/main.js') }}"></script>
<script src="{{ asset('assets/courses/js/app.js') }}"></script>
<script src="{{ asset('assets/courses/js/main.js') }}"></script>
<script src="{{ asset('assets/courses/js/bootstrap.js') }}"></script>
<script src="{{ asset('assets/courses/js/bootstrap.min.js') }}"></script>
</body>

</html>