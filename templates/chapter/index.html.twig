{% extends 'baseAdmin.html.twig' %}

{% block title %}Chapter index{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header">
            <h3>Tous les chapitres du cours:
                <span class="text-danger">{{ course.titre }}</span>
            </h3>
            <h4>Total de chapitres: <span class="text-danger">{{ chapters | length }}</span></h4>
        </div>
        <div class="box-body">
            <table class="table table-striped table-condensed">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Chapitre</th>
                    <th>Titre</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% set i = 1 %}
                {% for chapter in chapters %}
                    <tr>
                        <td>{{ i }}</td>
                        <td>{{ "Chapitre " ~ chapter.numero }}</td>
                        <td>{{ chapter.titre }}</td>
                        <td>
                            <a href="{{ path('chapter_show', {'id': chapter.id}) }}" class="btn btn-xs btn-info">
                                <i class="fa fa-eye"></i>
                                Voir
                            </a>
                            <a href="{{ path('chapter_edit', {'id': chapter.id}) }}" class="btn btn-xs btn-warning">
                                <i class="fa fa-edit"></i>
                                Editer
                            </a>
                        </td>
                    </tr>
                    {% set i = i + 1 %}
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="box-footer">
            <a href="{{ path('chapter_new', {'id': course.id, 'slug': course.slug}) }}" class="btn btn-xs btn-primary">
                Nouveau chapitre
            </a>
        </div>
    </div>
{% endblock %}
